<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yucheng.whattowear.Reason">
    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:text="Personal Setting"
        android:layout_height="30dp"
        android:textColor="@color/colorAccent"
        android:textSize="20dp">
    </TextView>

    <TextView
        android:id="@+id/moodadv"
        android:layout_width="70dp"
        android:text="心情："
        android:layout_height="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:layout_below="@id/textView">
    </TextView>
    <TextView
        android:id="@+id/moodsco"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:textColor="@color/accent_material_light"
        android:textSize="20dp"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/moodadv">
    </TextView>
    <Spinner
        android:id="@+id/moodadvans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moodadv">
    </Spinner>
    <TextView
        android:id="@+id/health"
        android:layout_width="70dp"
        android:text="健康："
        android:layout_height="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:layout_below="@id/moodadvans">
    </TextView>
    <TextView
        android:id="@+id/healthsco"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:textColor="@color/accent_material_light"
        android:textSize="20dp"
        android:layout_toEndOf="@+id/health"
        android:layout_alignBottom="@+id/health"
        android:layout_below="@+id/moodadvans">
    </TextView>
    <Spinner
        android:id="@+id/healthans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/health">
    </Spinner>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="200dp"
        android:text="Google Calendar"
        android:layout_height="30dp"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/healthans"
        android:textSize="20dp">
    </TextView>
    <TextView
        android:id="@+id/rule"
        android:layout_width="70dp"
        android:text="活動："
        android:layout_height="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:layout_below="@id/textView1">
    </TextView>


    <TextView
        android:id="@+id/ruleans"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:layout_below="@id/rule"
        android:text="遠遊">
    </TextView>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:text="GPS Location"
        android:layout_height="30dp"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/ruleans"
        android:textSize="20dp">
    </TextView>
    <TextView
        android:id="@+id/country"
        android:layout_width="220dp"
        android:text="國家/城市/區域/道路："
        android:layout_height="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:layout_below="@id/textView2">
    </TextView>
    <TextView
        android:id="@+id/countrysco"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:textColor="@color/accent_material_light"
        android:textSize="20dp"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/country">
    </TextView>
    <TextView
        android:id="@+id/countryans"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:layout_below="@id/country">
    </TextView>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:text="Clock"
        android:layout_height="30dp"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/countryans"
        android:textSize="20dp">
    </TextView>
    <TextView
        android:id="@+id/off"
        android:layout_width="110dp"
        android:text="上班時段："
        android:layout_height="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:layout_below="@id/textView3">
    </TextView>
    <TextView
        android:id="@+id/offans"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:layout_below="@id/off"
        android:text="大夜班">
    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/buttonr" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:id="@+id/buttonr"
        android:layout_alignTop="@+id/moodadvans"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
